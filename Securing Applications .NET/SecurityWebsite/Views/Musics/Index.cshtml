@model IEnumerable<Common.Music>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Genre
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var music in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelMusic => music.Name)

                </td>
                <td>
                    @Html.DisplayFor(modelMusic => music.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelMusic => music.Genre.Title)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = Common.Encryption.EncryptQueryString(music.Id.ToString()) }) |
                    @Html.ActionLink("More Info", "Details", new { id = Common.Encryption.EncryptQueryString(music.Id.ToString()) }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Common.Encryption.EncryptQueryString(music.Id.ToString()) })

                    @if (music.MusicPath != null)
                    {
                        <span>|</span>
                        @Html.ActionLink("Download", "Download", new { id = Common.Encryption.EncryptQueryString(music.Id.ToString()) })
                    }
                </td>
            </tr>
        }
    }


</table>
