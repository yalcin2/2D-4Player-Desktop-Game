@using Microsoft.AspNet.Identity
@model IEnumerable<WebApplication1.Models.File>
@{
    ViewBag.Title = "Index";
}
@if (Request.IsAuthenticated)
{
    <h2 style="margin-top:50px">Files</h2>
    <p>
        @Html.ActionLink("Upload a file", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                File Name
            </th>
            <th>
                Download Link
            </th>
            <th> </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    <a href='@item.Link'>
                        Download
                    </a>
                </td>
            </tr>
        }
    </table>
}



